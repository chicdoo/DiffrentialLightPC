<UserControl x:Class="DiffrentialLightPC.ControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiffrentialLightPC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <!-- Control Panel Left Start -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <GroupBox Grid.Row="0" Margin="1, 1, 1, 1">
                <GroupBox.Header>
                    <Label Content="Connection"/>
                </GroupBox.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="CONNECTION_cbPort" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" DropDownOpened="ComboBox_OnDropDownOpened" />
                    <Button x:Name="CONNECTION_btnOpen" Grid.Row="1" Grid.Column="0" Content="Open" Click="Button_OnClick"/>
                    <Button x:Name="CONNECTION_btnClose" Grid.Row="1" Grid.Column="1" Content="Close" Click="Button_OnClick"/>
                </Grid>
            </GroupBox>
            <GroupBox Grid.Row="1" Margin="1, 1, 1, 1">
                <GroupBox.Header>
                    <Label Content="PWM"/>
                </GroupBox.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Content="CH"/>
                    <ComboBox x:Name="PWM_cbChannel" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" />
                    <Label Grid.Row="1" Grid.Column="0" Content="Freq"/>
                    <TextBox x:Name="PWM_txtFreq" Grid.Row="1" Grid.Column="1" />
                    <Button x:Name="PWM_btnFreq" Grid.Row="1" Grid.Column="2" Content="Set" Click="Button_OnClick"/>
                    <Label Grid.Row="2" Grid.Column="0" Content="Duty"/>
                    <TextBox x:Name="PWM_txtDuty" Grid.Row="2" Grid.Column="1" />
                    <Button x:Name="PWM_btnDuty" Grid.Row="2" Grid.Column="2" Content="Set" Click="Button_OnClick"/>
                </Grid>
            </GroupBox>
            <GroupBox Grid.Row="2">
                <GroupBox.Header>
                    <Label Content="ETC"/>
                </GroupBox.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Content="버전확인" Grid.Row="0" Grid.Column="0" />
                    <Button Content="온도확인" Grid.Row="0" Grid.Column="1" />
                    <Button Content="B/L상태확인" Grid.Row="1" Grid.Column="0" />
                    <Button Content="전체Offset확인" Grid.Row="1" Grid.Column="1" />
                    <Button Content="전체옵셋 100%" Grid.Row="1" Grid.Column="2" />
                </Grid>
            </GroupBox>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <GroupBox Grid.Row="0" Margin="1, 1, 1, 1">
                <GroupBox.Header>
                    <Label Content="Luminance"/>
                </GroupBox.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="LUMI_tbValue" Grid.Row="0" Grid.Column="0" />
                    <Button x:Name="LUMI_btnSet" Grid.Row="0" Grid.Column="1" Content="휘도변경" Click="Button_OnClick"/>
                    <Label Grid.Row="1" FontSize="6" Content="휘도설정 0~500" />
                    <Button x:Name="LUMI_btnInc" Grid.Row="2" Grid.Column="0" Content="휘도증가" Click="Button_OnClick"/>
                    <Button x:Name="LUMI_btnDec" Grid.Row="2" Grid.Column="1" Content="휘도감소" Click="Button_OnClick"/>
                    <Button x:Name="LUMI_btnMax" Grid.Row="3" Grid.Column="0" Content="휘도최소" Click="Button_OnClick"/>
                    <Button x:Name="LUMI_btnMin" Grid.Row="3" Grid.Column="1" Content="휘도최대" Click="Button_OnClick"/>
                </Grid>
            </GroupBox>
            <GroupBox Grid.Row="1" Margin="1, 1, 1, 1">
                <GroupBox.Header>
                    <Label Content="Reset"/>
                </GroupBox.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="RST_btnFac" Grid.Column="0" Content="공장출하" />
                    <Button x:Name="RST_btnUser" Grid.Column="1" Content="유저셋" />
                </Grid>
            </GroupBox>
            <GroupBox Grid.Row="2" Margin="1, 1, 1, 1">
                <GroupBox.Header>
                    <Label Content="Information"/>
                </GroupBox.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                    </Grid.ColumnDefinitions>
                    <TextBox />
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
